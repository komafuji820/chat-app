<div class='side_bar_header'>
  <div class='user_name'>
    <%= link_to "#{current_user.name}", edit_user_path(current_user.id)%>
  </div>
  <div class='room_create_btn'>
    <%= link_to 'チャットを作成する', new_room_path %>
  </div>
</div>
<div class='rooms'>
  <div class='room'>
    <% current_user.rooms.each do |room| %>
    <div class='room_name'>
      <%= link_to room.name, room_messages_path(room.id) %>
    </div>
    <% end %>
  </div>
</div>